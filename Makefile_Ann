NAME		=	asm

#compile
CC			=	gcc
CFLAGS		=	-Wall -Wextra -Werror

#LIBFT staff
LIB_DIR		=	./libft/
LIB_A		=	$(LIB_DIR)libft.a
LIB_HEAD	=	$(LIB_DIR)libft.h
#LIBLINK	=	-L $(LIB_DIR) -lft

#name all dir
INC_DIR		=	./includes/
OBJ_DIR		=	./obj/
SRC_DIR		=	./src/

#turn on includes
HEAD		=	$(INC_DIR)asm.h
INC			=	-I$(LIB_DIR) -I$(INC_DIR)

#list all .c files
SRC_ASM		=	init_info.c split_tok.c utils3.c main.c utils2.c convert_token.c reading_proc.c utils.c verify_things.c header_pars.c analize_lex.c free_things.c operation.c analize_order.c error_manager.c convert.c

#list all .o files
O_ASM		=	$(SRC_ASM:%.c=%.o)

#srcs dir
SRCS_AS		=	$(addprefix $(SRC_DIR), $(SRC_ASM))

#objs dir
OBJ_ASM		=	$(addprefix $(OBJ_DIR), $(O_ASM))

all : $(OBJ_DIR) $(NAME)

#create obj dir
$(OBJ_DIR):
	mkdir -p $(OBJ_DIR)

#create proj
$(NAME): $(LIB_A) $(OBJ_ASM)
	@echo "\\033[32m Prepare asm translator... \033[0m"
	$(CC) $(CFLAGS) $(INC) $(OBJ_ASM) $(LIB_A) -o $(NAME)

#create libc
$(LIB_A):
	@echo "\\033[34m Prepare libft... \033[0m"
	$(MAKE) -sC $(LIB_DIR) CFLAGS="$(CFLAGS)"

#make obj
$(OBJ_DIR)%.o: $(SRC_DIR)%.c $(HEAD)
	$(CC) $(CFLAGS) -c $(INC) $< -o $@

directory: $(OBJ_DIR)

clean:
	@rm -rf $(OBJ_DIR) $(LIB_A)
	make -C $(LIB_DIR) clean
	@echo "\\033[31m Deleting object files... \033[0m"

fclean: clean
	@rm -f $(NAME) $(LIB_A)
	@make -C $(LIB_DIR) fclean
	@echo "\\033[31m Deleting $(NAME)... \033[0m"

re: fclean all

.PHONY: clean all re fclean directory
